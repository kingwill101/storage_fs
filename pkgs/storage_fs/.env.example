# MinIO Configuration for Testing
# Copy this file to .env and update with your values

# MinIO Endpoint (without http://)
MINIO_ENDPOINT=localhost:9000

# MinIO Access Credentials
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# MinIO Bucket Name
MINIO_BUCKET=test-bucket

# MinIO Region (optional)
MINIO_REGION=us-east-1

# Use SSL/TLS (true/false)
MINIO_USE_SSL=false

# Alternative bucket for comprehensive tests
MINIO_CLOUD_BUCKET=clouddisk

# For production/real S3 testing, use these instead:
# MINIO_ENDPOINT=s3.amazonaws.com
# MINIO_ACCESS_KEY=your-aws-access-key
# MINIO_SECRET_KEY=your-aws-secret-key
# MINIO_BUCKET=your-bucket-name
# MINIO_REGION=us-east-1
# MINIO_USE_SSL=true

# For Cloudflare R2 testing:
# MINIO_ENDPOINT=<account-id>.r2.cloudflarestorage.com
# MINIO_ACCESS_KEY=your-r2-access-key
# MINIO_SECRET_KEY=your-r2-secret-key
# MINIO_BUCKET=your-r2-bucket
# MINIO_REGION=auto
# MINIO_USE_SSL=true
